
@{
  ViewBag.Title = "Home Page";
}

<div class="row">
  <div class="col-md-12">
    <h2></h2>
    @if (User.Identity.IsAuthenticated)
    {
      <p>Hello @User.Identity.Name! Click <a asp-action="Profile" asp-controller="Home">here</a> to access your profile!</p>
    }
    else
    {
      <p>You are <bs>not authenticated</bs> Press the <b>Login</b> button to sign in.</p>
    }
  </div>
</div>